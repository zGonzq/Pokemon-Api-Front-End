<section>
    <div class="px-4 py-3 my-5 text-center">
        <img id="logo" class="d-block mx-auto mb-4" src="/images/logo.png" alt="">
        <h1 class="display-5 fw-bold text-body-emphasis">Pokedex</h1>
        <div class="col-lg-6 mx-auto">
          <p class="lead mb-4"> Pokedex para la actividad de web</p>
        </div>
      </div>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page"><% data.forEach(item => { %> <%= item.pokename %> <% }) %> </li>
        </ol>
      </nav>

    <div class="container">
        <div class="row">
        <% data.forEach(item => { %>
          <ol class="col list-group pb-3">
            <li class="list-group-item d-flex justify-content-between align-items-center active">
              <div class="ms-2 me-auto">
                <div class="fw-bold">ID pokemon</div>
                    <%= item.IDpoke %>
              </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div class="ms-2 me-auto"> 
                <div class="fw-bold">Nombre del pokemon</div>
                <%= item.pokename %>
              </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div class="ms-2 me-auto">
                <div class="fw-bold">Puntos de salud</div>
                <%= item.HP %>
              </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div class="ms-2 me-auto">
                <div class="fw-bold">Ataque</div>
                <%= item.attack %>
              </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div class="ms-2 me-auto">
                <div class="fw-bold">Defensa</div>
                <%= item.defense %>
              </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div class="ms-2 me-auto">
                <div class="fw-bold">Ataque especial</div>
                <%= item.spattack %>
              </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div class="ms-2 me-auto">
                <div class="fw-bold">Defensa especial</div>
                <%= item.spdefense %>
              </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div class="ms-2 me-auto">
                <div class="fw-bold">Velocidad</div>
                <%= item.speed %>
              </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div class="ms-2 me-auto">
                <div class="fw-bold">Tipo</div>
                <%= item.dualtype %>
              </div>
            </li>
          </ol>
          <div class="mb-4">
            <a href="/actions/edit/<%= item.IDpoke %>"><button class="btn btn-success btn-sm"><i class="bi bi-pen"></i> Editar</button></a>
            <a href="/actions/delete/<%= item.IDpoke %>"><button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash3"></i> Eliminar</button></a>
          </div>
          <% }) %>
            </div>
        </div>
</section>

<style>
  section{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
</style>