<section>
    <div class="px-4 py-5 my-5 text-center">
        <img id="logo" class="d-block mx-auto mb-4" src="/images/logo.png" alt="">
        <h1 class="display-5 fw-bold text-body-emphasis">Pokedex</h1>
        <div class="col-lg-6 mx-auto">
          <p class="lead mb-4"> Pokedex para la actividad de web  </p>
          <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a href="/actions/create"><button type="button" class="btn btn-success btn-lg px-4 gap-3">Crear pokemon</button></a>
            <button type="button" class="btn btn-outline-secondary btn-lg px-4">Total de pokemones: <%= data.length %></button>
          </div>
        </div>
      </div>

      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">Home</li>
        </ol>
    </nav>

    <div class="container">
        <div class="row">
          <% data.forEach(item => { %>
            <ol class="col-4 list-group pb-5">
              <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                  <div class="fw-bold">ID pokemon</div>
                      <%= item.IDpoke %>
                </div>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                  <div class="fw-bold">Nombre del pokemon</div>
                  <%= item.pokename %>
                </div>
              </li>
                <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                  <div class="fw-bold pb-1">Acciones</div>
                  <a href="/actions/view/<%= item.IDpoke %>"><button class="btn btn-primary btn-sm"><i class="bi bi-zoom-in"></i> Ver m√°s</button></a>
                  <a href="/actions/edit/<%= item.IDpoke %>"><button class="btn btn-success btn-sm"><i class="bi bi-pen"></i> Editar</button></a>
                  <a href="/actions/delete/<%= item.IDpoke %>"><button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash3"></i> Eliminar</button></a>
                </div>
            </ol>
            <% }) %>
            </div>
        </div>
      </section>


<style>
  section{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
</style>